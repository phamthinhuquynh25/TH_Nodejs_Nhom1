                <label for="noibat" class="form-label">Nổi bật </label>
                <input type="text" class="form-control" name="noibat" id="noibat">
            </div>

            <div class="mb-3 pt-3">
                <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
            </div>

        </form>
    </div>
</div>