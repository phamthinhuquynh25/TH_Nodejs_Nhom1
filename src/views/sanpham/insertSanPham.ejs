<div class="container">
    <div class="dangky container-fluid w-50 p-3 mt-5 ">

        <form action="/insert-sanpham" method="POST">
            <h3 class="fw-bold text-center pb-2">
                <%= data.tieude %>
            </h3>
            <div class=" mb-3">
                <label for="tensp" class="form-label">Tên sản phẩm</label>
                <input type="text" class="form-control" name="tensp" id="tensp">
            </div>

            <div class=" mb-3">
                <label for="hinh" class="form-label">Hình ảnh</label>
                <input type="file" class="form-control" name="hinh" id="hinh">
            </div>

            <div class=" mb-3">
                <label for="gia" class="form-label">Giá </label>
                <input type="text" class="form-control" name="gia" id="gia">
            </div>
            <div class=" mb-3">
                <label for="gioitinh" class="form-label">Giới tính </label>
                <input type="text" class="form-control" name="gioitinh" id="gioitinh">
            </div>

            <select class="form-select" aria-label="Default select example" name="idhieusp">
                <option>
                    Thương hiệu
                </option>
                <% for(let i=0; i < data.item.length; i++){ %>
                    <option value="<%= data.item[i].id %>">
                        <%= data.item[i].tenhieu %>
                    </option>
                    <% }%>
            </select>

            <div class="mb-3 pt-3">
                <button type="submit" class="btn btn-primary w-100">Cập nhật</button>
            </div>

        </form>
    </div>
</div>